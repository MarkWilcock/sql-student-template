{
  "name": "SQL Student CodeSpace",
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:2",  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "mssql.connections": [
          {
            "server": "zomalex-sql.database.windows.net",
            "database": "LearnSQL",
            "authenticationType": "SqlLogin",
            "user": "student10",
            "password": "solveSQL!",
            "savePassword": true,
            "encrypt": "Mandatory",
            "trustServerCertificate": true,
            "port": 1433
          }
        ]
      }
    }
  },
  "forwardPorts": [1433],
  "postCreateCommand": "echo 'Codespace ready with MSSQL extension installed.'"
}
